                {
                    "from": 40,
                    "to": 80,
                    "color": "rgba(255,204,0,0.3)"
                },
                {
                    "from": 80,
                    "to": 100,
                    "color": "rgba(0,153,51,0.3)"
                }
            ]
        },
        "plotOptions": {
            "lineargauge": {
                "dataLabels": {
                    "borderWidth": 0,
                    "verticalAlign": "middle",
                    "style": {
                        "fontSize": "14px",
                        "fontWeight": "bold"
                    }
                }
            }
        },
        "series": [
            {
                "name": "Performance Score",
                "data": [
                    92
                ],
                "color": "#2F4F4F",
                "dataLabels": {
                    "enabled": true,
                    "format": "{y}%",
                    "style": {
                        "textOutline": "none"
                    }
                }
            }
        ],
        "legend": {
            "enabled": false
        },
        "credits": {
            "enabled": false
        }
