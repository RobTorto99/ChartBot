{
    "visualization_prompt": "Create a Highcharts chartOptions object to render a horizontal linear gauge showing performance metric using color-coded threshold bands",
    "visualization_code": {
        "chart": {
            "type": "lineargauge",
            "inverted": true,
            "height": 100,
            "margin": [
                20,
                50,
                20,
                50
            ]
        },
        "title": {
            "text": "A Horizontal Linear Gauge",
            "style": {
                "fontSize": "16px",
                "color": "#333333"
            }
        },
        "xAxis": {
            "lineColor": "#C0C0C0",
            "labels": {
                "enabled": false
            },
            "tickLength": 0
        },
        "yAxis": {
            "min": 0,
            "max": 100,
            "tickLength": 5,
            "tickWidth": 1,
            "tickColor": "#C0C0C0",
            "gridLineColor": "#C0C0C0",
            "gridLineWidth": 1,
            "minorTickInterval": 5,
            "minorTickLength": 5,
            "title": null,
            "labels": {
                "format": "{value}%",
                "style": {
                    "color": "#666666",
                    "fontSize": "12px"
