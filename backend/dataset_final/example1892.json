{
    "visualization_prompt": "Generate a heatmap showing conditional null-value handling using Highcharts-specific tooltip customization",
    "visualization_code": {
        "chart": {
            "type": "heatmap"
        },
        "title": {
            "text": "Conditional Tooltip"
        },
        "subtitle": {
            "text": "The black (null) point has custom tooltip, the others default"
        },
        "xAxis": {
            "title": {
                "text": "X-Axis",
                "style": {
                    "color": "#333",
                    "fontSize": "12px"
                }
