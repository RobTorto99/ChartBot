            "title": {
                "text": "Y-Axis",
                "style": {
                    "color": "#333",
                    "fontSize": "12px"
                }
            }
        },
        "colorAxis": {
            "min": 0,
            "max": 9,
            "labels": {
                "style": {
                    "color": "#666"
                }
